<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_Cart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="180dp"
            android:layout_height="177dp"
            android:layout_weight="1"
            android:src="@tools:sample/avatars"
            app:srcCompat="@drawable/orange" />

        <LinearLayout
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Titletxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="Fresh Orange"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="40dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/PlusButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/green_background"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/weightText"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:text="1 Kg"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/PlusButton"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/moinsButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/green_background"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/weightText"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/EditBtn"
                    style="@android:style/Widget.Button"
                    android:layout_width="71dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/light_green_background"
                    android:text="Edit"
                    android:textColor="@color/green"

                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/textView8" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Delete"
                    style="@android:style/Widget.Button"
                    android:layout_width="75dp"
                    android:layout_height="27dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="24dp"

                    android:background="@drawable/light_green_background"
                    android:text="Delete"
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/textView8" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ShopNowBtn"
                style="@android:style/Widget.Button"
                android:layout_width="153dp"
                android:layout_height="33dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/green_background"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/textView8" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>